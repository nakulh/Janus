<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/routesFeedCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/containerRelativeLayout"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visibleRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/startLocationTextView"
                android:layout_alignBottom="@+id/dateTimeImageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/endLocationTextView"
                android:layout_alignBottom="@+id/timeImageView"
                android:layout_alignLeft="@+id/startLocationTextView"
                android:layout_alignStart="@+id/startLocationTextView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTimeImageView"
                android:src="@drawable/ic_date_time"
                android:layout_above="@+id/timeImageView"
                android:layout_alignLeft="@+id/distanceImageView"
                android:layout_alignStart="@+id/distanceImageView"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/dateTimeTextView"
                android:layout_alignTop="@+id/dateTimeImageView"
                android:layout_alignLeft="@+id/distanceTextView"
                android:layout_alignStart="@+id/distanceTextView"
                android:textSize="12sp"
                android:layout_marginTop="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distanceImageView"
                android:src="@drawable/ic_distance"
                android:layout_alignTop="@+id/distanceTextView"
                android:layout_toLeftOf="@+id/distanceTextView"
                android:layout_toStartOf="@+id/distanceTextView"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/distanceTextView"
                android:layout_alignBottom="@+id/timeImageView"
                android:layout_toLeftOf="@+id/timeImageView"
                android:layout_toStartOf="@+id/timeImageView"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeImageView"
                android:src="@drawable/ic_time"
                android:layout_alignTop="@+id/timeTravelledTextView"
                android:layout_toLeftOf="@+id/timeTravelledTextView"
                android:layout_toStartOf="@+id/timeTravelledTextView"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/timeTravelledTextView"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/hiddenRelativeLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/visibleRelativeLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RIDE"
                android:id="@+id/rideButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:theme="@style/FlatButton"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/statsButton"
                android:layout_toStartOf="@+id/statsButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATS"
                android:id="@+id/statsButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAllCaps="false"
                android:theme="@style/FlatButton"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
